
@{
    ViewBag.Title = "UserLogin";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserLogin</h2>

<div class="container">
    <div id="login_form" style="margin-top: 50px;" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info login_form">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
            </div>

            <div style="padding-top: 30px" class="panel-body">

                <div style="display: none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input id="usernameTextBox" type="text" />
                </div>

                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input id="passwordTextBox" type="password" />
                </div>

                <div style="margin-bottom: 25px; color: red" class="input-group">
                    <label id="messageLabel"></label>
                </div>

                <div style="margin-top: 10px" class="form-group">
                    <div class="col-sm-12 controls">
                        <input id="cmdLogin" type="submit" value="submit" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/datepicker")
    <link href="~/Styles/UserLogin.css" rel="stylesheet" />
}

@section Scripts {
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/Scripts/page/UserLogin.js")
}
