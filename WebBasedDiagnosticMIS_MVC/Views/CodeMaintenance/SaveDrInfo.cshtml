@using WebBasedDiagnosticMIS_MVC.Models

@{
    ViewBag.Title = "SaveDrInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<DepartmentInfo> GetAllDepartment = ViewBag.GetAllDepartment;
    List<MrInfoEntry> GetAllMr = ViewBag.GetAllMr;
    List<DrInfoEntry> DrList = ViewBag.GetAllDrList;
    ActionResponse response = ViewBag.response;

}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Add New Dr.</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-8 col-md-offset-1">
                        <form class="form-horizontal" id="drInfoSave" method="POST">
                            @if (response != null)
                            {
                                <div class="alert alert-@response.Class alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    @response.Message
                                </div>
                            }
                            <div class="form-group">
                                <label for="DrCode" class="col-sm-4 control-label">Dr Code</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" name="DrCode" id="DrCode" placeholder="Dr Code">
                                </div>
                                <div class="col-sm-2">
                                    <button type="button" class="btn btn-default" id="getItem">Go</button>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="DrName" class="col-sm-4 control-label">Dr Name</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="DrName" id="DrName" placeholder="Dr Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="PresentAddress" class="col-sm-4 control-label">Present Address</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="PresentAddress" id="PresentAddress" placeholder="Present Address">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="PermanentAddress" class="col-sm-4 control-label">Permanent Address</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="PermanentAddress" id="PermanentAddress" placeholder="Permanent Address">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Department" class="col-sm-4 control-label">Department</label>
                                <div class="col-sm-8">
                                    <select id="Department" name="Department" class="form-control">
                                        @foreach (var item in GetAllDepartment)
                                        {
                                            <option value="@item.DepartmentId">@item.DepartmentName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="RegistrationDate" class="col-sm-4 control-label">Registration Date</label>
                                <div class="col-sm-8">
                                    <input type="text" id="RegistrationDate" name="RegistrationDate" class="form-control" placeholder="Registration Date" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="DrDOB" class="col-sm-4 control-label">Dr DOB</label>
                                <div class="col-sm-8">
                                    <input type="text" id="DrDOB" name="DrDOB" class="form-control" placeholder="Dr DOB" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="TelephoneNo" class="col-sm-4 control-label">Telephone No</label>
                                <div class="col-sm-8">
                                    <input type="text" id="TelephoneNo" name="TelephoneNo" class="form-control" placeholder="Telephone No" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Email" class="col-sm-4 control-label">Email</label>
                                <div class="col-sm-8">
                                    <input type="text" id="Email" name="Email" class="form-control" placeholder="Email" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="TakeCommission" class="col-sm-4 control-label">Take Commission</label>
                                <div class="col-sm-8">
                                    <select id="TakeCommission" name="TakeCommission" class="form-control">
                                        <option value="1">Yes</option>
                                        <option value="0">No</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="MPOId" class="col-sm-4 control-label">MPO Name</label>
                                <div class="col-sm-8">
                                    <select id="MPOId" name="MPOId" class="form-control">
                                        @foreach (var item in GetAllMr)
                                        {
                                            <option value="@item.MrId">@item.MrName</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-4 col-sm-8">
                                    <button type="submit" class="btn btn-default">Save</button>
                                </div>
                            </div>
                        </form>

                        
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<br /><br />
<div class="row">
    <div class="col-sm-12">
        <table id="example" class="display" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Dr Code</th>
                    <th>Dr Name</th>
                    <th>Telephone No</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in DrList)
                {
                    <tr>
                        <td>@item.DrCode</td>
                        <td>@item.DrName</td>
                        <td>@item.TelephoneNo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/datepicker")
    <link href="~/Styles/investigationChartEntry.css" rel="stylesheet" />
}

@section Scripts {
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/Scripts/page/saveDrInfo.js")
}