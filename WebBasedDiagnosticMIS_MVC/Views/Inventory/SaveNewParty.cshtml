@using WebBasedDiagnosticMIS_MVC.Models

@{
    ViewBag.Title = "SaveNewParty";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ActionResponse response = ViewBag.response;
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Add New Party.</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-8 col-md-offset-1">
                        <form class="form-horizontal" id="productInfoSave" method="POST">
                            @if (response != null)
                            {
                                <div class="alert alert-@response.Class alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    @response.Message
                                </div>
                            }
                            <div class="form-group">
                                <label for="PartyId" class="col-sm-4 control-label">Party Id</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" name="PartyId" id="PartyId" placeholder="Party Id">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="PartyName" class="col-sm-4 control-label">Party Name</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="PartyName" id="PartyName" placeholder="Party Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="PartyAddress" class="col-sm-4 control-label">Address</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="PartyAddress" id="PartyAddress" placeholder="Address">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="ContactNo" class="col-sm-4 control-label">Contact No</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="ContactNo" id="ContactNo" placeholder="Contact No">
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-sm-offset-4 col-sm-8">
                                    <button type="submit" class="btn btn-default">Save</button>
                                </div>
                            </div>
                        </form>


                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<br /><br />


@section Styles {
    @Styles.Render("~/Content/datepicker")
    <link href="~/Styles/investigationChartEntry.css" rel="stylesheet" />
}

@section Scripts {
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/Scripts/page/saveDrInfo.js")
}





