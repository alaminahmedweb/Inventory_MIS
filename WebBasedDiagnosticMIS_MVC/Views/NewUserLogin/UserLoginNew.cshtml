
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/jquery.min.js"></script>
    <script src="~/Content/jquery.validate.min.js"></script>
    <script src="~/Content/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Styles/UserLogin.css" rel="stylesheet" />
</head>
<body>
    <form id="loginform" class="form-horizontal" role="form" method="POST">
        <div class="container">
            <div id="login_form" style="margin-top: 50px;" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info login_form">
                    <div class="panel-heading">
                        <div class="panel-title">Sign In</div>
                    </div>

                    <div style="padding-top: 30px" class="panel-body">

                        <div style="display: none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="usernameTextBox" name="UserName" type="text" class="form-control" />
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="passwordTextBox" name="Password" type="password" class="form-control" />
                        </div>

                        <div style="margin-bottom: 25px; color: red" class="input-group">
                            <label id="messageLabel"></label>
                        </div>

                        <div style="margin-top: 5px" class="form-group">
                            <div class="col-sm-12 controls">
                                <input id="cmdLogin" type="submit" value="submit" class="btn btn-success btn-block" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script>
        if ($('#usernameTextBox').val = '') {
            var message;
            $('#messageLabel').text(message);
            
        }
    </script>
</body>
</html>
